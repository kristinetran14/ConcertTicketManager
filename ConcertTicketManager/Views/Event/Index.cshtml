@model IEnumerable<Event>

@{
    ViewData["Title"] = "All Events";
}

<h2>All Concert Events</h2>

<a class="btn btn-success mb-3" asp-action="Create">+ Create New Event</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Event Name</th>
            <th>Date</th>
            <th>Venue</th>
            <th>Description</th>
            <th>Ticket Types</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ev in Model)
        {
            <tr>
                <td>@ev.Name</td>
                <td>@ev.Date.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@ev.Venue?.Name</td>
                <td>@ev.Description</td>
                <td>
                    @if (ev.TicketTypes?.Any() == true)
                    {
                        <ul>
                            @foreach (var ticket in ev.TicketTypes)
                            {
                                <li>
                                    @ticket.Type - @ticket.Price.ToString("C") (Capacity: @ticket.Capacity)
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <em>No ticket types defined</em>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
