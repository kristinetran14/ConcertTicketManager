@model EventDeleteViewModel

@{
    ViewData["Title"] = "Delete Event";
}

<h2>Delete Event</h2>

@if (Model.TicketSalesStarted)
{
    <div class="alert alert-danger">
        You cannot delete this event because ticket sales have already started.
    </div>

    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
}
else
{
    <div class="alert alert-warning">
        Are you sure you want to delete the event <strong>@Model.Name</strong> scheduled for
        <strong>@Model.Date.ToString("yyyy-MM-dd HH:mm")</strong> at
        <strong>@Model.VenueName</strong>?
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="EventId" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
}
